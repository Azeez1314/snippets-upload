<%- include('partials/header') -%>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= movie.title %></h2>
      <img class="img-fluid" src="<%= movie.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/movie/likePost/<%= movie.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= movie.likes %></h3>
        <%if(movie.user == user.id){ %>
        <form
          action="/movie/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= movie.caption %></p>
    </div>
    <div class="mt-5">
      <h2>Add a comment</h2>
      <form action="/comment/createComment/<%=movie._id%>" method="POST">
        <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input type="text" class="form-control" id="comment" name="comment">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <ul>
      <% for(var i=0; i<comments.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <!--Add user attribution-->
          <span>User <%= comments[i].createdBy%> says: "<%= comments[i].comment%>" 
          <!--If comment was created by current user, then show delete button-->
          <br> <%if(comments[i].createdById == user.id){ %>
                <form
                  action="/comment/deleteComment/<%=post._id%>/<%= comments[i]._id %>?_method=DELETE"
                  method="POST"
                  >
                  <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
                <%}%>
        </li>
      <% } %>
    </ul>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feedMovie">Return to Movie Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>